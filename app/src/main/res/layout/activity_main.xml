<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.gopikrishna19.justjava.MainActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/activity_gutter">

            <EditText
                android:id="@+id/editName"
                style="@style/Component"
                android:layout_width="match_parent"
                android:hint="@string/name"
                android:inputType="textCapSentences"
                android:padding="8dp"/>

            <TextView
                style="@style/Component"
                android:text="@string/quantity"
                android:textAllCaps="true"/>

            <LinearLayout
                style="@style/Component"
                android:orientation="horizontal">

                <Button
                    style="@style/CounterButton"
                    android:onClick="decrementQuantity"
                    android:text="@string/minus"/>

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>

                <Button
                    style="@style/CounterButton"
                    android:onClick="incrementQuantity"
                    android:text="@string/plus"/>
            </LinearLayout>

            <TextView
                style="@style/Component"
                android:text="@string/toppings"
                android:textAllCaps="true"/>

            <CheckBox
                android:id="@+id/cbWhippedCream"
                style="@style/Checkbox"
                android:text="@string/whipped_cream"/>

            <CheckBox
                android:id="@+id/cbChocolate"
                style="@style/Checkbox"
                android:text="@string/chocolate"
                />
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gridDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="@style/FinalButton"
            android:onClick="summarizeOrder"
            android:text="@string/summarize"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gridDivider"/>

        <Button
            style="@style/FinalButton"
            android:onClick="submitOrder"
            android:text="@string/order"/>
    </LinearLayout>
</LinearLayout>
